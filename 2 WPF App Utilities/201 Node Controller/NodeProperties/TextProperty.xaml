<Grid x:Class="Aki32Utilities.WPFAppUtilities.NodeController.TextProperty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aki32Utilities.WPFAppUtilities.NodeController"
             mc:Ignorable="d" Height="25" Margin="10"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="3*"/>
    </Grid.ColumnDefinitions>
    <TextBlock x:Name="labelUI" Foreground="White" Margin="0,0,10,0"/>
    <TextBox x:Name="fieldUI" Grid.Column="1" TextChanged="fieldUI_TextChanged" Background="#11FFFFFF" BorderThickness="0"  VerticalContentAlignment="Center" TextAlignment="Left">
    </TextBox>
</Grid>
